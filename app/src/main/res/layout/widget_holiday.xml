<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_background"
    android:orientation="vertical"
    android:padding="16dp">    <!-- Widget Header with Refresh -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal">

        <!-- Title Container -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kapan"
                android:textColor="@color/text_primary"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Libur"
                android:textColor="@color/accent_red"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="?"
                android:textColor="@color/text_primary"
                android:textSize="14sp"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- Refresh Button -->
        <TextView
            android:id="@+id/refresh_button"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/refresh_button_background"
            android:gravity="center"
            android:text="â†»"
            android:textColor="@color/text_primary"
            android:textSize="14sp"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- Widget Subtitle -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:gravity="center"
        android:text="Dua hari libur yang akan datang"
        android:textColor="@color/text_secondary"
        android:textSize="10sp"
        android:textStyle="normal" />

    <!-- Holiday Items Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">        <!-- Holiday 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:background="@drawable/widget_item_background"
            android:orientation="horizontal"
            android:padding="6dp">

            <LinearLayout
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/widget_date_circle"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/holiday1_day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="01"
                    android:textColor="@color/surface_primary"
                    android:textSize="9sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/holiday1_month"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jan"
                    android:textColor="@color/surface_primary"
                    android:textSize="7sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/holiday1_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/widget_loading"
                    android:textColor="@color/text_primary"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:maxLines="2"
                    android:ellipsize="end" />

                <TextView
                    android:id="@+id/holiday1_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/text_secondary"
                    android:textSize="8sp"
                    android:maxLines="1"
                    android:ellipsize="end" />

            </LinearLayout>

        </LinearLayout>        <!-- Holiday 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:background="@drawable/widget_item_background"
            android:orientation="horizontal"
            android:padding="6dp">

            <LinearLayout
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/widget_date_circle"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/holiday2_day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="01"
                    android:textColor="@color/surface_primary"
                    android:textSize="9sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/holiday2_month"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jan"
                    android:textColor="@color/surface_primary"
                    android:textSize="7sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/holiday2_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/text_primary"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:maxLines="2"
                    android:ellipsize="end" />

                <TextView
                    android:id="@+id/holiday2_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/text_secondary"
                    android:textSize="8sp"
                    android:maxLines="1"
                    android:ellipsize="end" />

            </LinearLayout>        </LinearLayout>

    </LinearLayout>

    <!-- Widget Footer -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="Tunggu tanggal libur selanjutnya..."
        android:textColor="@color/text_secondary"
        android:textSize="9sp"
        android:textStyle="italic" />

</LinearLayout>
